-- Insertion Sort na nossa linguagem funcional

-- Insere o elemento x em uma lista jÃ¡ ordenada xs
insert x xs = case xs of
  []      -> [x];
  (y:ys)  ->
    if x <= y
      then x : xs
      else y : insert x ys;
;

-- insertionSort: ordena a lista usando insert recursivamente
insertionSort lst = case lst of
  []     -> [];
  (h:t)  -> insert h (insertionSort t);
;

-- Teste em main
main = insertionSort [34, 7, 23, 32, 5, 62]
